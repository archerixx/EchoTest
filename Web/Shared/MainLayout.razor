@inherits LayoutComponentBase
@using System.Security.Claims;

<PageTitle>Web</PageTitle>



<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>

        <AuthorizeView>
            <Authorized>
                <div class="top-row px-4">
                    <p>@context.User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Name)?.Value</p>
                </div>
            </Authorized>
        </AuthorizeView>



        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
